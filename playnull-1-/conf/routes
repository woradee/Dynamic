# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.first()
GET     /home                       controllers.Application.second()
GET     /about                      controllers.Application.second()

GET     /listTour                   controllers.Application.input()
GET     /newTour                    controllers.Application.newTour()
POST    /createTour                 controllers.Application.createTour()
GET     /editTour/:id               controllers.Application.editTour(id:String)
POST    /updateTour                 controllers.Application.updateTour()

GET     /deleteTour/:id             controllers.Application.deleteTour(id:String)
GET     /gellery                    controllers.Application.gellery()

GET     /login                      controllers.Application.Login()
POST    /chklogin                   controllers.Application.chkLogin()
GET     /loginsuccess               controllers.Application.loginSuccess()


GET     /newmember                  controllers.Application.newmember()
POST    /creamember                 controllers.Application.createmember()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
